    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_add">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_upload"
                android:layout_width="wrap_content"
                android:layout_height="100dp"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="请上传图片:"
                android:textSize="24dp"
                android:gravity="center"></TextView>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_upload"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="商品名称:"
                android:textSize="24dp"
                android:gravity="center"></TextView>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="商品价格:"
                android:textSize="24dp"
                android:gravity="center"></TextView>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_price"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="联系电话:"
                android:textSize="24dp"
                android:gravity="center"></TextView>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_phone"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="商品分类:"
                android:textSize="24dp"
                android:gravity="center"></TextView>
            <TextView
                android:id="@+id/tv_describe"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_type"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="商品详情:"
                android:textSize="24dp"
                android:gravity="center"></TextView>
            <ImageButton
                android:id="@+id/ib_upload"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/tv_upload"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"></ImageButton>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/ib_upload"
                android:layout_toRightOf="@id/tv_upload"
                android:layout_marginTop="10dp"
                android:maxLength="20"></EditText>

            <EditText
                android:id="@+id/et_price"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/et_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_upload"
                android:maxLength="20"
                android:inputType="number"></EditText>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/et_price"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_upload"
                android:maxLength="20"
                android:inputType="phone"></EditText>
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/et_phone"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_upload"></Spinner>
            <EditText
                android:id="@+id/et_describe"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_upload"
                android:maxLength="300"
                ></EditText>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="发布商品"
        android:textSize="20dp"></Button>


</RelativeLayout>